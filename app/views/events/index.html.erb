<p><%= link_to t("event.add"), new_event_path %></p>

<table class="events">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr data-id="<%= event.id %>">
        <td><%= event.name %></td>
        <td><%= link_to t("shared.edit"), edit_event_path(event) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

